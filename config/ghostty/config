copy-on-select = clipboard
font-family = "Geist Mono"
font-size = 16
# theme = dark:Rose Pine Moon,light:Rose Pine Dawn
theme = Rose Pine Moon
# theme = cursor-dark


# Cmd + Enter to open a new split, mimics Kitty
keybind = super+enter=new_split:auto

# Cmd + d-pad to move around splits
keybind = super+right=goto_split:right
keybind = super+left=goto_split:left
keybind = super+down=goto_split:bottom
keybind = super+up=goto_split:top

# Cmd + hjkl to move around splits (vim-style)
keybind = super+h=goto_split:left
keybind = super+j=goto_split:bottom
keybind = super+k=goto_split:top
keybind = super+l=goto_split:right

shell-integration-features = ssh-terminfo

bell-features = no-attention,no-title

custom-shader = ~/.config/ghostty/shaders/cursor-trail.glsl

clipboard-write = allow
clipboard-read = allow
clipboard-paste-protection = false
