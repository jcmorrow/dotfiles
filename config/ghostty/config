copy-on-select = clipboard
font-family = "Geist Mono"
font-family-bold = "Geist Mono Bold"
font-family-italic = "Geist Mono"
font-family-bold-italic = "Geist Mono Light"
font-size = 14
# theme = "rose-pine"
theme = "seoul256"

# Cmd + Enter to open a new split, mimics Kitty
keybind = super+enter=new_split:auto

# Cmd + d-pad to move around splits
keybind = super+right=goto_split:right
keybind = super+left=goto_split:left
keybind = super+down=goto_split:bottom
keybind = super+up=goto_split:top
